<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.ContentFrameLayout
        android:id="@+id/bottom_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <com.zhengsr.cusbottomlib.view.CusBottomLayout
            android:id="@+id/bottom_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <com.zhengsr.cusbottomlib.view.CusBottomItemView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cus_image_margin_top="4dp"
                app:cus_image_size="25dp"
                app:cus_normal_pic="@mipmap/home_normal"
                app:cus_normal_text_color="@color/bottom_normal_color"
                app:cus_selected_pic="@mipmap/home_select"
                app:cus_selected_text_coclor="@color/maincolor"
                app:cus_text="@string/home"
                app:cus_text_margin_top="2dp"
                app:cus_text_size="11sp" />

            <com.zhengsr.cusbottomlib.view.CusBottomItemView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cus_image_margin_top="4dp"
                app:cus_image_size="25dp"
                app:cus_normal_pic="@mipmap/ic_launcher"
                app:cus_normal_text_color="@color/bottom_normal_color"
                app:cus_selected_pic="@mipmap/ic_launcher"
                app:cus_selected_text_coclor="@color/maincolor"
                app:cus_text="@string/cloud_meet"
                app:cus_text_margin_top="2dp"
                app:cus_text_size="11sp" />

            <com.zhengsr.cusbottomlib.view.CusBottomItemView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cus_image_margin_top="4dp"
                app:cus_image_size="25dp"
                app:cus_normal_pic="@mipmap/ic_launcher"
                app:cus_normal_text_color="@color/bottom_normal_color"
                app:cus_selected_pic="@mipmap/ic_launcher"
                app:cus_selected_text_coclor="@color/maincolor"
                app:cus_text="@string/smartlib"
                app:cus_text_margin_top="2dp"
                app:cus_text_size="11sp" />

            <com.zhengsr.cusbottomlib.view.CusBottomItemView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cus_image_margin_top="4dp"
                app:cus_image_size="23dp"
                app:cus_normal_pic="@mipmap/ic_launcher"
                app:cus_normal_text_color="@color/bottom_normal_color"
                app:cus_selected_pic="@mipmap/ic_launcher"
                app:cus_selected_text_coclor="@color/maincolor"
                app:cus_text="@string/cloud"
                app:cus_text_margin_top="2dp"
                app:cus_text_size="11sp" />

            <com.zhengsr.cusbottomlib.view.CusBottomItemView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cus_image_margin_top="4dp"
                app:cus_image_size="25dp"
                app:cus_normal_pic="@mipmap/ic_launcher"
                app:cus_normal_text_color="@color/bottom_normal_color"
                app:cus_selected_pic="@mipmap/ic_launcher"
                app:cus_selected_text_coclor="@color/maincolor"
                app:cus_text="@string/mime"
                app:cus_text_margin_top="2dp"
                app:cus_text_size="11sp" />
        </com.zhengsr.cusbottomlib.view.CusBottomLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
